            s = float(input("masukkan sisi: "))
            kubus = Kubus (s)
            print()
            kubus.volume()
            kubus.luas()
        elif menu == '3':
            j = float(input("masukkan jari: "))
            tabung = tabung(j,t)
            print()
            tabung.volume()
            tabung.luas()
        elif menu == '4':
            a = float(input("masukka alas: "))
            tA = float(input("masukkan tinggi alas: "))
            t = float(input("masukka tinggi: "))
            LimasSegitiga = LimasSegitiga (a, tA, t)
